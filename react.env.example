# Python API Configuration (Recommended - all LLM calls go through API)
REACT_APP_USE_API_LAYER=true
REACT_APP_API_BASE_URL=http://localhost:8000/api/v1

# Legacy Direct Configuration (Fallback)
REACT_APP_ELASTIC_ENDPOINT=https://your-elasticsearch-cluster.com
REACT_APP_ELASTIC_API_KEY=your-elasticsearch-api-key
REACT_APP_ELASTIC_INDEX=your-index-name
REACT_APP_SEARCH_APPLICATION_NAME=your-search-application-name
REACT_APP_USE_SEARCH_APPLICATION=true

# Semantic Search Configuration
REACT_APP_SEMANTIC_ENABLED=false
REACT_APP_SEMANTIC_MODEL=.multilingual-e5-small
REACT_APP_SEMANTIC_FIELD_PREFIX=semantic_
REACT_APP_HYBRID_WEIGHT=0.7

# OpenAI Configuration (Legacy mode only)
REACT_APP_OPENAI_ENDPOINT=https://api.openai.com/v1/chat/completions
REACT_APP_OPENAI_API_KEY=your-openai-api-key
REACT_APP_OPENAI_MODEL=gpt-3.5-turbo

# Application Configuration
REACT_APP_ENVIRONMENT=development
REACT_APP_DEBUG=true